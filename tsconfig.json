{
  "compilerOptions": { 
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "migrations/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
